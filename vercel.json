{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "apps/api/dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/dist",
      "use": "@vercel/static-dist"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/apps/api/dist/server.js"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/apps/web/dist/index.html"
    }
  ]
}
