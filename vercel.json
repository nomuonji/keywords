{
  "engines": {
    "node": "20.x"
  },
  "builds": [
    {
      "src": "apps/api/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/api/src/server.ts"
    }
  ]
}