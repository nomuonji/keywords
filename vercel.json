{
  "builds": [
    {
      "src": "api/[[...slug]].ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[[...slug]]?slug=$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
