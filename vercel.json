{
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "apps/api/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "../../packages/core/dist/**",
          "../../packages/gemini/dist/**",
          "../../packages/scheduler/dist/**"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/apps/api/src/server.ts"
    }
  ]
}