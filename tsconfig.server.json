{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/server",
    "rootDir": "server",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": "server"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
